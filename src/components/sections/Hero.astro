---
import { Mail, Linkedin, Github } from 'lucide-react';
interface Props {
  contactInfo: {
    email: string;
    linkedin: string;
    github: string;
  };
}

const { contactInfo } = Astro.props;
---
<section id="home" class="min-h-screen flex items-center justify-center text-center -mt-20">
    <div class="animate-fade-in-up" style="opacity: 0;">
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-4 text-gradient">
            Edwin Flores Sanchez
        </h1>
        <h2 class="text-xl md:text-2xl font-semibold text-text-secondary mb-8">
            Consultor SAP S/4HANA & Ingeniero de Sistemas
        </h2>
        <div class="flex justify-center items-center gap-4">
            <a href={`mailto:${contactInfo.email}`} class="text-text-secondary hover:text-primary p-3 transition-all duration-300 hover:scale-110" aria-label="Enviar correo electrÃ³nico">
                <Mail size={28} />
            </a>
            <a href={contactInfo.linkedin} target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-primary p-3 transition-all duration-300 hover:scale-110" aria-label="Perfil de LinkedIn">
                <Linkedin size={28} />
            </a>
            <a href={contactInfo.github} target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-primary p-3 transition-all duration-300 hover:scale-110" aria-label="Perfil de GitHub">
                <Github size={28} />
            </a>
        </div>
    </div>
</section>