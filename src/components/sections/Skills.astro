---
import Card from '../Card.astro';
import { Briefcase, Boxes, Code, Database, BrainCircuit, Users, TerminalSquare } from 'lucide-react';
import skillsData from '../../data/skills.json';

const icons = {
    Briefcase,
    Boxes,
    Code,
    Database,
    BrainCircuit,
    Users,
    TerminalSquare
};
---
<section id="skills" class="py-24">
    <h2 class="text-4xl font-bold mb-12 text-center">Caja de Herramientas TÃ©cnicas</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {skillsData.map(({ category, icon, items }) => {
            const Icon = icons[icon];
            return (
                <Card>
                    <div class="flex items-center gap-4 mb-6">
                        <Icon className="text-primary" size={32} />
                        <h3 class="text-xl font-bold text-text-primary">{category}</h3>
                    </div>
                    <div class="flex flex-wrap gap-2">
                        {items.map(item => (
                            <span class="bg-background text-text-secondary text-sm font-medium px-3 py-1 rounded-full border border-card/50">
                                {item}
                            </span>
                        ))}
                    </div>
                </Card>
            )
        })}
    </div>
</section>